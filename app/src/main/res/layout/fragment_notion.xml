<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.tylorgarrett.notion.fragments.NotebooksFragment">

    <TextView
        android:id="@+id/notebooks_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/notebooks_recyclerview"
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <com.getbase.floatingactionbutton.AddFloatingActionButton
        android:id="@+id/notebooks_floatingactionbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        fab:fab_plusIconColor="@color/NotionYellow"/>

</RelativeLayout>
