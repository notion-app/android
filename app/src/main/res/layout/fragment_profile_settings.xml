<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    tools:context="com.tylorgarrett.notion.fragments.ProfileContentFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_content_circleimageview"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:border_width="2dp"
        app:border_color="@color/NotionYellow"/>

    <TextView
        android:id="@+id/profile_content_name_textview"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_content_circleimageview"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/profile_content_logout_button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/action_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
